    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "fs-extra": "^10.1.0",
    "import-from": "^4.0.0",
    "merge-anything": "^5.1.3",
    "ts-patch": "^2.0.2",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.4.1",
    "typescript-transform-paths": "^3.4.4",
    "yargs": "^17.6.2"
  }
}
