{
  "name": "@unikum/base-nodejs",
  "version": "1.0.9",
  "description": "b1se necessities for a nodejs typescript project",
  "publishConfig": {
    "registry": "https://nexus.unikum.us/repository/unikum-npm"
  },
  "engines": {
    "node": ">=16"
  },
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "type": "module",
  "scripts": {
    "build": "concurrently 'tsc -p tsconfig.build.json' 'tsc -p tsconfig.build-cjs.json' && cp -r ./internals/dist ./ && ts-node-esm ./internals/ts-patch.ts --dir-target='./dist' --dir-project=./",
    "lint": "eslint . --fix",
    "prepare:release": "concurrently 'npm run test:coverage' 'npm run lint' 'npm run build'",
    "setup:project": "ts-node ./internals/setup-project.ts",
    "release": "standard-version",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:CI": "VITEST_MAX_THREADS=2 VITEST_MIN_THREADS=2 vitest run --coverage",
    "test:watch-coverage": "vitest --coverage",
    "test:watch": "vitest",
    "prepare": "husky install && ts-patch install -s"
  },
  "keywords": [],
  "author": "",
  "license": "NONE",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.19",
    "@swc/helpers": "^0.4.14",
    "@types/eslint": "^8.4.10",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vitest/coverage-c8": "^0.25.3",
    "concurrently": "^7.6.0",
    "enhanced-resolve": "^5.12.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-sort": "^2.4.0",
    "happy-dom": "^7.7.0",
    "husky": "^8.0.2",
    "postcss": "^8.4.19",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "standard-version": "^9.5.0",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "tmp-promise": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.25.3"
  },
  "peerDependencies": {
    "@swc/core": "^1.3.19",
    "@swc/helpers": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-sort": "^2.4.0",
