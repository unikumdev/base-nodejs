{
  "name": "@unikum/base-nodejs",
  "version": "1.1.4",
  "description": "base necessities for a nodejs typescript project",
  "publishConfig": {
    "registry": "https://nexus.unikum.us/repository/unikum-npm"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "type": "module",
  "scripts": {
    "build": "concurrently 'tsc -p tsconfig.build.json' 'tsc -p tsconfig.build-cjs.json' && cp -r ./internals/dist ./ && concurrently 'ts-node-esm ./internals/ts-patch.ts --dir-target='./dist/cjs' --dir-project=./' 'ts-node-esm ./internals/ts-patch.ts --dir-target='./dist/esm' --dir-project=./'",
    "lint": "eslint . --fix",
    "prepare:release": "concurrently 'npm run test:coverage' 'npm run lint' 'npm run build'",
    "setup:project": "ts-node ./internals/setup-project.ts",
    "release": "standard-version",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:CI": "VITEST_MAX_THREADS=2 VITEST_MIN_THREADS=2 vitest run --coverage",
    "test:watch-coverage": "vitest --coverage",
    "test:watch": "vitest",
    "prepare": "husky install && ts-patch install -s"
  },
  "keywords": [],
  "author": "",
  "license": "NONE",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.55",
    "@swc/helpers": "^0.5.1",
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.16.1",
    "@types/react": "^18.2.0",
    "@types/yargs-parser": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitest/coverage-c8": "^0.30.1",
    "concurrently": "^8.0.1",
    "enhanced-resolve": "^5.13.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-sort": "^2.10.0",
    "espree": "^9.5.1",
    "get-tsconfig": "^4.5.0",
    "happy-dom": "^9.9.2",
    "husky": "^8.0.3",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "standard-version": "^9.5.0",
    "stylelint": "^15.6.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "tmp-promise": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.30.1",
    "yargs-parser": "^21.1.1"
  },
  "peerDependencies": {
    "@swc/core": "^1.3.21",
    "@swc/helpers": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-sort": "^2.4.0",
    "prettier": "^2.8.0",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "import-from": "^4.0.0",
    "merge-anything": "^5.1.5",
    "ts-patch": "^2.1.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.0",
    "typescript-transform-paths": "^3.4.6",
    "yargs": "^17.7.1"
  }
}
