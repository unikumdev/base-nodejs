{
  "name": "@unikum/base-nodejs",
  "version": "1.0.8",
  "description": "b1se necessities for a nodejs typescript project",
  "publishConfig": {
    "registry": "https://nexus.unikum.us/repository/unikum-npm"
  },
  "engines": {
    "node": ">=16"
  },
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "type": "module",
  "scripts": {
    "build": "concurrently 'tsc -p tsconfig.build.json' 'tsc -p tsconfig.build-cjs.json' && cp -r ./internals/dist ./",
    "lint": "eslint . --fix",
    "prepare:release": "concurrently 'npm run test:coverage' 'npm run lint' 'npm run build'",
    "setup:project": "ts-node ./internals/setup-project.ts",
    "release": "standard-version",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:CI": "VITEST_MAX_THREADS=2 VITEST_MIN_THREADS=2 vitest run --coverage",
    "test:watch-coverage": "vitest --coverage",
    "test:watch": "vitest",
    "prepare": "husky install && ts-patch install -s"
  },
  "keywords": [],
  "author": "",
  "license": "NONE",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
